@page "/filmlist"
@using Model
@using Interfaces
@inject IFilmService FilmService


<h3>FilmList</h3>
<p> This page shows a list of all films</p>


@if (films == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>Tittle</th>
				<th>Director</th>
				<th>Release Date</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var film in films)
			{
			<tr>
				<td>@film.Title</td>
				<td>@film.Director</td>
				<td>@film.ReleaseDate</td>
			</tr>
			}
		</tbody>
	</table>
}



@code {
 private IEnumerable<Film> films;

 protected override async Task OnInitializedAsync()
 {
	try
	{
		films = await FilmService.GetAllFilms();
	}
	catch (Exception)
	{
		throw;
	}
 }
}
